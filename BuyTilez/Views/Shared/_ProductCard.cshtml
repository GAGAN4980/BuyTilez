@model BuyTilez.Models.Product
@using BuyTilez.Utilities

<div class="col-lg-4 col-md-6 pb-4 filter @Model.Category.CategoryName.Replace(' ', '_')">
    <!-- Product Card -->
    <div class="card border-0 shadow-lg rounded-lg overflow-hidden">
        <!-- Product Image -->
        <div class="position-relative">
            <img class="card-img-top img-fluid d-block mx-auto" src="@Model.ImageUrl"
                 alt="Product Image" style="object-fit:cover; height:220px; width:100%; border-top-left-radius:10px; border-top-right-radius:10px;">
        </div>

        <!-- Card Body -->
        <div class="card-body text-center p-3">
            <!-- Product Name & Price -->
            <h5 class="font-weight-bold text-dark">@Model.ProductName</h5>
            <p class="text-primary h5 font-weight-bold">@Model.Price<span class="text-muted h6"> / m²</span></p>

            <!-- Category & Application -->
            <div class="d-flex justify-content-center mb-2">
                <span class="badge badge-light border px-3 py-2 rounded-pill text-dark me-2">@Model.Category.CategoryName</span>
                <span class="badge badge-light border px-3 py-2 rounded-pill text-dark">@Model.ApplicationType.Name</span>
            </div>

            <!-- Short Description -->
            <p class="text-muted small px-2" style="height: 50px; overflow:hidden;">@Model.ShortDescription</p>

            <!-- View Details Button -->
            <a asp-action="Detail" asp-route-Id="@Model.Id" class="btn btn-gradient btn-block mt-2">View Details</a>
        </div>
    </div>
</div>

<!-- CSS for Modern Design -->
<style>
    .btn-gradient {
        background: linear-gradient(135deg, #222, #444);
        color: #fff;
        font-weight: 600;
        border-radius: 8px;
        padding: 10px;
        transition: all 0.3s ease;
    }

    .btn-gradient:hover {
        background: linear-gradient(135deg, #444, #666);
        color: #fff;
    }
</style>
