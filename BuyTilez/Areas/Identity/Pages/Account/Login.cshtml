@page
@model LoginModel

<div class="page-container">
    <main class="content">
        <div class="login-card">
            <h2>Welcome Back</h2>

            <form id="account" method="post">
                <input asp-for="Input.Email" placeholder="Email..." type="email" class="form-control" autocomplete="username" aria-required="true" />
                <input asp-for="Input.Password" placeholder="Password..." type="password" class="form-control" autocomplete="current-password" aria-required="true" />

                <button id="login-submit" type="submit" class="btn-login">
                    <i class="fas fa-sign-in-alt"></i> Log in
                </button>

                <div class="auth-links">
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn-register-link">Register as a new User</a>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>
            </form>
        </div>
    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
